{
  "name": "specs",
  "version": "0.0.1",
  "private": true,
  "scripts": {
    "start": "node ./bin/www",
    "stop": "pkill specs",
    "pretest": "npm start & sleep 1",
    "test": "node_modules/.bin/cucumber-js --format=json | node_modules/.bin/cucumber-junit > test-results.xml",
    "preteamcity-coverage": "npm run-script pretest",
    "teamcity-coverage": "node_modules/.bin/istanbul cover node_modules/.bin/cucumber-js --report teamcity --report lcov",
    "codeclimate": "node_modules/.bin/codeclimate < coverage/lcov.info",
    "postteamcity-coverage": "npm run-script posttest",
    "posttest": "npm stop",
    "lint": "node_modules/.bin/eslint ./"
  },
  "contributors": [
    "Jim Cresswell <jimCresswell>",
    "Stanislaw Wozniak <swozniak@sponte.uk>"
  ],
  "directories": {
    "lib": "./lib"
  },
  "dependencies": {
    "body-parser": "~1.13.1",
    "cookie-parser": "~1.3.5",
    "debug": "~2.2.0",
    "express": "~4.13.0",
    "jade": "~1.11.0",
    "morgan": "~1.6.0",
    "serve-favicon": "~2.3.0",
    "q-io": "^1.13.1",
    "gherkin": "^2.12.1"
  },
  "devDependencies": {
    "codeclimate-test-reporter": "0.0.4",
    "cucumber": "^0.5.1",
    "cucumber-junit": "^1.1.10",
    "eslint": "^0.24.0",
    "istanbul": "^0.3.17",
    "request": "^2.58.0",
    "should": "^7.0.1"
  }
}
